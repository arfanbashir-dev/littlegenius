generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user { 
  
  user_id       Int      @id @default(autoincrement())
  user_name     String
  user_email    String   @unique
  user_password String
  user_role     String
  createdAt     DateTime @default(now())
}




